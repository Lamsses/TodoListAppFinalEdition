@page "/todoChanges"
@inherits TodoBase

@inject NavigationManager uriHelper;

@if (Items == null)
{
    <h3>Changes Has been Done</h3>
}
else
{
    <h3>Changes Has been Done</h3>
    <button @onclick="Okay">Okay </button>
    


}
@code {
    [Inject]
    public NavigationManager NavigationManager { get; set; }

    protected void Okay()
    {
        NavigationManager.NavigateTo("/todo");
    }

}